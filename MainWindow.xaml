<Window x:Class="NoBorderWPF.MainWindow"
        xmlns:tb="using:H.NotifyIcon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework" xmlns:tb1="http://www.hardcodet.net/taskbar"
        Title="Taskbar Text Display" Width="auto" MinWidth="1200" SizeToContent="Height"
        WindowStyle="None" Background="Black" Topmost="True" ShowInTaskbar="False"
        Loaded="Window_Loaded" Closing="Window_Closing" MouseLeftButtonDown="Window_MouseLeftButtonDown" KeyDown="Window_KeyDown" Icon="/book.png" LayoutUpdated="Window_LayoutUpdated" Unloaded="Window_Unloaded">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="PrevButton" Content="&lt;" Width="30" Click="PrevButton_Click" Grid.Column="0" Foreground="White"/>
        <TextBlock x:Name="MessageTextBlock" Text="訊息 1" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" TextTrimming="CharacterEllipsis" Foreground="White"/>
        <Button x:Name="NextButton" Content="&gt;" Width="30" Click="NextButton_Click" Grid.Column="2" Foreground="White"/>
    </Grid>
</Window>
