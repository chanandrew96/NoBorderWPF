<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>NoBorderWPF.ico</ApplicationIcon>
    <PackageIcon>book.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="bookstack_libr_3024.ico" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="NoBorderWPF.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="H.NotifyIcon.Wpf" Version="2.3.1" />
    <PackageReference Include="IKVM" Version="8.14.0" />
    <PackageReference Include="Microsoft.Win32.SystemEvents" Version="9.0.9" />
    <PackageReference Include="System.Drawing.Common" Version="9.0.9" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="book.png" />
    <Resource Include="bookstack_libr_3024.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="book.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>
